{
  "name": "@supastack/root",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.0.0-rc.40",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "packages/configs/*",
      "packages/db/*",
      "packages/domains/*/*",
      "packages/ui/*",
      "packages/utils/*"
    ]
  },
  "scripts": {
    "--deps--": "",
    "upgrade-deps": "yarn upgrade-interactive",
    "upgrade-nx": "nx migrate latest && nx migrate --run-migrations",
    "check-constraints": "yarn constraints",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "dev": "nx run-many --target dev --output-style stream",
    "graph": "nx graph",
    "clean": "rm -r **/node_modules && rm -r **/dist && rm -r **/build",
    "codegen": "nx run-many --target codegen",
    "storybook": "yarn workspace @supastack/ui-primitives storybook",
    "lint": "nx run-many --target lint",
    "lint.fix": "yarn lint --fix && prettier --ignore-path .eslintignore --write \"**/*.{ts,tsx}\";",
    "test": "nx run-many --target test",
    "typecheck": "nx run-many --target typecheck"
  },
  "resolutions": {
    "@noble/hashes": "~1.2.0",
    "tailwind-variants": "file:.yalc/tailwind-variants"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231016.0",
    "@types/compression": "^1.7.4",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.7",
    "@types/react": "18.2.30",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "happy-dom": "^12.9.1",
    "nx": "16.10.0",
    "nx-cloud": "16.5.2",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "--https://fig.io/docs/guides/autocomplete-for-npm-scripts#adding-the-fig-object--": "",
  "fig": {
    "dev": {
      "description": "Start everything for local development",
      "icon": "‚≠êÔ∏è",
      "priority": 100
    },
    "test": {
      "description": "Test everything",
      "icon": "üß™",
      "priority": 80
    },
    "lint": {
      "description": "Lint everything",
      "icon": "üöß",
      "priority": 70
    },
    "upgrade-deps": {
      "description": "Use this to upgrade any deps except NX",
      "icon": "‚è´",
      "priority": 60
    },
    "upgrade-nx": {
      "description": "Use this to upgrade and migrate NX",
      "icon": "‚§¥Ô∏è",
      "priority": 59
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "tailwindFunctions": [
      "tw",
      "tx"
    ],
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
