{
  "compileOnSave": false,
  "exclude": ["**/node_modules", "**/tmp", "**/dist", "**/build", "**/coverage", "**/.cache", "**/.solid", ".yarn"],
  "include": [],
  "compilerOptions": {
    "rootDir": ".",

    "strict": true,

    // Enable top-level await, and other modern ESM features.
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext"],

    // Enable support for package.json "exports" property in TSC / vscode
    "moduleResolution": "bundler",

    // Enable stricter transpilation for better output.
    "isolatedModules": true,

    // Report an error when importing a file using a casing different from the casing on disk.
    "forceConsistentCasingInFileNames": true,

    // Properly support importing CJS modules in ESM
    "esModuleInterop": true,

    // Skip typechecking libraries and .d.ts files
    "skipLibCheck": true,

    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true,

    // Force functions designed to override their parent class to be specified as `override`.
    "noImplicitOverride": true,

    "noImplicitReturns": false,

    // Force the usage of the indexed syntax to access fields declared using an index signature.
    "noUncheckedIndexedAccess": true,

    // Report an error for unused labels instead of just a warning.
    "allowUnusedLabels": false,

    // Disallow JavaScript files from being imported
    "allowJs": false,

    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowImportingTsExtensions": true,
    "skipDefaultLibCheck": true,
    "noPropertyAccessFromIndexSignature": true,
    "jsx": "preserve",
    "resolveJsonModule": false,
    "noEmit": true
  }
}
